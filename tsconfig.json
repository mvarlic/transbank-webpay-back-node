{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true
  },
  "include" : [
    "src/**/*.ts"   /* Include every ts file in source folder */
  ],
  "exclude" : [
      "node_modules"  /* exclude everything in  node_modules */
  ]
}